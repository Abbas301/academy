{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0", 
    "title": "MediFit App",
    "description": "Medifit For Healthy Life"
  },
  "host": "localhost:2000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Default",
      "description": "API for Medifit Application"
    }
  ],
  "schemes": ["http","https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions":{
    "login":{
      "type":"object",
      "properties":{
        "email":{
          "type":"string",
          "description":"Email ID To Login",
          "example":"Example@gmail.com"
        },
        "password":{
          "type":"string",
          "description":"Enter A Valid Password",
          "example":"sanjkjhb"
        }
      }
    },

    "goal":{
      "type":"object",
      "properties":{
        "health":{
          "type":"string",
          "description":"Email ID To Login",
          "example":{
            "enum":[
              "I want to lose weight",
              "I want to reverse my medical condition",
              "I want to sleep better"
            ]
          }
        },
        "fitness":{
          "type":"string",
          "description":"Enter A Valid Password",
          "example":{
            "enum":[
            "I want to lose fat and gain muscle",
            "I want to improve my strength and endurance",
            "I want to be better at my sport"
            ]
          }
        },
        "personal":{
          "type":"string",
          "description":"Enter A Valid Password",
          "example":{
            "enum":[
              "I want to look good",
              "I want to feel good",
              "I want to change my habits"
            ]
          }
        }
      }
    }



  },
  "paths": {
    "/register": {
      "get": {
        "tags": [
            "Default"
        ],
        "parameters":[
          {
            "name":"x-auth-token",
            "in":"header",
            "description":"Authentication to login",
            "required":true,
            "type":"string"
          }
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400":{
            "description": "Bad request"
          },
          "404":{
            "description": "Page Not Found or File Not Found"
          },
          "401":{
              "description": "Unauthorized Client"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
            "Default"
        ],
        "parameters":[
          {
            "name":"body",
            "in":"body",
            "description":"Login Credentials",
            "required":true,
            "type":"object",
            "schema":{
              "$ref":"#/definitions/login"
            }
          }
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400":{
            "description": "Bad request"
          },
          "404":{
            "description": "Page Not Found or File Not Found"
          },
          "401":{
              "description": "Unauthorized Client"
          }
        }
      }
    },


    "/goals": {
      "get": {
        "tags": [
            "goals"
        ],
        "parameters":[
          {
            "name":"x-auth-token",
            "in":"header",
            "description":"Authentication to get goals",
            "required":true,
            "type":"string"
          }
        ],
        "summary": "Get the goals in system",
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400":{
            "description": "Bad request"
          },
          "404":{
            "description": "Page Not Found or File Not Found"
          },
          "401":{
              "description": "Unauthorized Client"
          }
        }
      }
    }


  }
  
}


